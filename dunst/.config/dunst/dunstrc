# ==============================================================================
# URGENCY LEVELS (Colors)
# ==============================================================================

# Low urgency 
[urgency_low]
    # Set background to dark gray with 90% opacity
    background = "#2B303BE6"
    foreground = "#F8F8F2"  
    timeout = 3000

# Normal urgency 
[urgency_normal]
    # Use the same color for consistency, maybe slightly darker (95% opacity = F2)
    background = "#2B303BF2" 
    foreground = "#F8F8F2"
    timeout = 5000

# Critical urgency (Keep red, but add opacity for consistency)
[urgency_critical]
    background = "#eb4d4bE6" # Red with 90% opacity (Matching your Waybar critical color)
    foreground = "#FFFFFF"
    timeout = 0
