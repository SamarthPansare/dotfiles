# Autostart
# =============================================================================

# Export environment for Wayland compatibility (required for screen sharing, flameshot, portals, etc.)
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway

# System tray applets
exec nm-applet
exec blueman-applet

# Alternating layouts script
exec_always ~/.config/sway/scripts/alternating_layouts.py

# Battery monitor for low battery notifications
exec ~/.config/sway/scripts/battery-monitor.sh

# =============================================================================
# Keybindings - Session Override
# =============================================================================

# Restart sway in-place (not in default, useful for applying changes)
bindsym $mod+Shift+r reload

# =============================================================================
# Keybindings - Launcher & Applications
# =============================================================================

# Rofi launcher (additional binding, $mod+d also works)
bindsym $mod+t exec $menu

# Clipboard manager
bindsym $mod+c exec clipman pick -t rofi

# Screen recorder
bindsym $mod+Shift+v exec simplescreenrecorder

# Power menu (logout, shutdown, reboot, etc.)
bindsym $mod+x exec wlogout

# =============================================================================
# Keybindings - Screenshots
# =============================================================================

# Flameshot (full featured screenshot with editing)
bindsym Print exec flameshot gui
bindsym XF86SelectiveScreenshot exec flameshot gui

# Fallback: grim + slurp with rofi menu (if flameshot doesn't work)
bindsym Shift+Print exec ~/.config/sway/scripts/screenshot.sh region

# =============================================================================
# Keybindings - Media (Volume)
# =============================================================================

# Volume Up
bindsym XF86AudioRaiseVolume exec bash -c '\
    pactl set-sink-volume @DEFAULT_SINK@ +5%; \
    VOL=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po " \K[0-9]+(?=%)" | head -n 1); \
    if [ "$VOL" -lt 1 ]; then ICON=""; \
    elif [ "$VOL" -lt 40 ]; then ICON=""; \
    else ICON=""; fi; \
    dunstify -r 9999 -u normal -t 3000 -h int:value:"$VOL" \
        -h string:x-dunst-stack-tag:volume -i none " Volume: $VOL%" "$ICON" 2>/dev/null'

# Volume Down
bindsym XF86AudioLowerVolume exec bash -c '\
    pactl set-sink-volume @DEFAULT_SINK@ -5%; \
    VOL=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po " \K[0-9]+(?=%)" | head -n 1); \
    if [ "$VOL" -lt 1 ]; then ICON=""; \
    elif [ "$VOL" -lt 40 ]; then ICON=""; \
    else ICON=""; fi; \
    dunstify -r 9999 -u normal -t 3000 -h int:value:"$VOL" \
        -h string:x-dunst-stack-tag:volume -i none " Volume: $VOL%" "$ICON" 2>/dev/null'

# Volume Mute Toggle
bindsym XF86AudioMute exec bash -c '\
    pactl set-sink-mute @DEFAULT_SINK@ toggle; \
    if pactl get-sink-mute @DEFAULT_SINK@ | grep -q "yes"; then \
        dunstify -r 9999 -u normal -t 3000 -h int:value:0 \
            -h string:x-dunst-stack-tag:volume -i none " Volume Muted" "" 2>/dev/null; \
    else \
        VOL=$(pactl get-sink-volume @DEFAULT_SINK@ | grep -Po " \K[0-9]+(?=%)" | head -n 1); \
        dunstify -r 9999 -u normal -t 3000 -h int:value:"$VOL" \
            -h string:x-dunst-stack-tag:volume -i none " Volume Unmuted" "" 2>/dev/null; \
    fi'

# Mic Mute Toggle
bindsym XF86AudioMicMute exec bash -c '\
    pactl set-source-mute @DEFAULT_SOURCE@ toggle; \
    if pactl get-source-mute @DEFAULT_SOURCE@ | grep -q "yes"; then \
        dunstify -r 9997 -u normal -t 3000 \
            -h string:x-dunst-stack-tag:mic -i none "ðŸŽ¤ Mic Muted" "" 2>/dev/null; \
    else \
        dunstify -r 9997 -u normal -t 3000 \
            -h string:x-dunst-stack-tag:mic -i none "ðŸŽ¤ Mic Unmuted" "" 2>/dev/null; \
    fi'

# =============================================================================
# Keybindings - Media (Brightness)
# =============================================================================

# Brightness Up
bindsym XF86MonBrightnessUp exec bash -c '\
    brightnessctl set +5%; \
    BRIGHT=$(brightnessctl g); \
    MAX=$(brightnessctl m); \
    PERCENT=$(( 100 * BRIGHT / MAX )); \
    dunstify -r 9998 -u normal -t 3000 -h int:value:"$PERCENT" \
        -h string:x-dunst-stack-tag:brightness -i none " Brightness: $PERCENT%" "" 2>/dev/null'

# Brightness Down
bindsym XF86MonBrightnessDown exec bash -c '\
    brightnessctl set 5%-; \
    BRIGHT=$(brightnessctl g); \
    MAX=$(brightnessctl m); \
    PERCENT=$(( 100 * BRIGHT / MAX )); \
    dunstify -r 9998 -u normal -t 3000 -h int:value:"$PERCENT" \
        -h string:x-dunst-stack-tag:brightness -i none " Brightness: $PERCENT%" "" 2>/dev/null'

# =============================================================================
# Window Rules
# =============================================================================

# Dialog and utility windows
for_window [window_type="dialog"] floating enable
for_window [window_type="utility"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="bubble"] floating enable

# System applets (Wayland - app_id)
for_window [app_id="blueman-manager"] floating enable
for_window [app_id="nm-connection-editor"] floating enable

# System applets (XWayland - class)
for_window [class="Blueman-manager"] floating enable
for_window [class="Nm-connection-editor"] floating enable

# Specific applications
for_window [class="Emulator"] floating enable
for_window [title="Picture in Picture"] floating enable, sticky enable, move position center

# Flameshot (proper positioning for Wayland)
for_window [app_id="flameshot"] border pixel 0, floating enable, fullscreen disable, move absolute position 0 0

# Screen sharing portal picker (xdg-desktop-portal)
for_window [app_id="xdg-desktop-portal-gtk"] floating enable
for_window [app_id="xdg-desktop-portal-wlr"] floating enable
for_window [title="Choose what to share"] floating enable

# Close focused floating window with $mod+q
bindsym $mod+q [floating] kill

