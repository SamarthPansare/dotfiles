# Wallpaper (X11 uses feh, sway uses swaybg)
exec_always --no-startup-id feh --bg-fill ~/Pictures/Wallpapers/lofi_chill_room.jpeg

# Compositor for X11 (transparency, no tearing)
exec --no-startup-id xcompmgr

# Bluetooth applet
exec --no-startup-id blueman-applet

# Alternating layouts script (synced with sway)
exec_always --no-startup-id /home/samarth/.config/i3/alternating_layouts.py

# Battery monitor for low battery notifications
exec --no-startup-id ~/.config/i3/scripts/battery-monitor.sh

# =============================================================================
# Keybindings - Launcher & Applications
# =============================================================================

# Rofi launcher (additional binding, $mod+d also works)
bindsym $mod+t exec --no-startup-id rofi -show drun

# Clipboard manager
bindsym $mod+c exec --no-startup-id clipman pick -t rofi

# Screen recorder
bindsym $mod+Shift+v exec --no-startup-id simplescreenrecorder

# Power menu (logout, shutdown, reboot, etc.)
bindsym $mod+x exec --no-startup-id wlogout

# =============================================================================
# Keybindings - Screenshots
# =============================================================================

# Flameshot
bindsym Print exec --no-startup-id flameshot gui
bindsym XF86SelectiveScreenshot exec --no-startup-id flameshot gui

# =============================================================================
# Keybindings - Brightness (synced with sway)
# =============================================================================

# Brightness Up (with dunst notification)
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/brightness.sh up

# Brightness Down (with dunst notification)
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/brightness.sh down

# =============================================================================
# Window Rules (synced with sway)
# =============================================================================

# Dialog and utility windows
for_window [window_type="dialog"] floating enable
for_window [window_type="utility"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="bubble"] floating enable, move position center

# System applets
for_window [class="Blueman-manager"] floating enable
for_window [class="Nm-connection-editor"] floating enable

# Specific applications
for_window [class="Emulator"] floating enable
for_window [title="Picture-in-Picture"] floating enable, sticky enable, move position center
for_window [title="Picture in picture"] floating enable, sticky enable, move position center

# Screen sharing portal picker (xdg-desktop-portal)
for_window [class="xdg-desktop-portal-gtk"] floating enable
for_window [class="Xdg-desktop-portal-gtk"] floating enable
for_window [title="Choose what to share"] floating enable

# Close focused floating window with $mod+q
bindsym $mod+q [floating] kill

